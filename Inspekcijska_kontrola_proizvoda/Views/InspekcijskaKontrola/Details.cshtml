@using PagedList.Mvc
@using PagedList
@model IPagedList<Inspekcijska_kontrola_proizvoda.Models.InspekcijskaKontrola>

<style>

    label {
        font-weight: normal !important;
    }
</style>

<br />
<h3>Izvršene kontrole</h3>

@{
    ViewBag.Title = "Izvršene kontrole";
}

<br />
<div class="text-danger">
    @Html.ValidationSummary(false)
</div>
@using (Html.BeginForm("Details", "InspekcijskaKontrola", FormMethod.Get))
{
    <b> Pretraga po:&nbsp </b>@Html.RadioButton("option", "Datum") <text> Datum kontrole&nbsp</text>@Html.RadioButton("option", "NazivProizvoda") <text> Naziv Proizvoda</text>
    @Html.RadioButton("option", "InspekcijskoTijelo")<text> Inspekcijsko tijelo&nbsp</text>

    @Html.TextBox("search", null , new { autocomplete = "off" }) 
    <input type="submit"
           name="submit"
           value="Search" class="btn btn-basic" style="margin-left:4px" />

    <b style="float:right">
        @Html.ActionLink("Kreiraj izvještaj", "CreateReport") |
        @Html.ActionLink("Unos nove kontrole", "Create")
    </b>

}

<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().DatumKontrole)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().RezultatiKontrole)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ProizvodSiguran)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().InspekcijskoTijelo.NazivTijela)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Proizvod.NazivProizvoda)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DatumKontrole)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RezultatiKontrole)
            </td>
            <td>

                @if (item.ProizvodSiguran)
                {
                    @Html.Label("Da")
                }
                else
                {
                    @Html.Label("Ne")
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InspekcijskoTijelo.NazivTijela)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proizvod.NazivProizvoda)

            </td>
            <td>
                @Html.ActionLink("Izmjena", "Edit", new { id = item.InspekcijskaKontrolaID }) |
                @Html.ActionLink("Brisanje kontrole", "Delete", new { id = item.InspekcijskaKontrolaID }) ||
                @Html.ActionLink("Kreiraj izvještaj za kontrolu", "DetailsFor", new { id = item.InspekcijskaKontrolaID })
            </td>
        </tr>
    }

</table>


@Html.PagedListPager(Model, pageNumber => Url.Action("Details", new
{
pageNumber,
option = Request.QueryString["option"],
search = Request.QueryString["search"]
}))
<div>
    @Html.ActionLink("Nazad", "Index", "Home")
</div>

